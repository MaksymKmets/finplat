{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "postgresql",
      "image": "postgres:alpine'",
      "hostname": "postgresql",
      "essential": false,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 5432,
          "containerPort": 5432
        }
      ]
    },
    {
      "name": "finplat-ui",
      "image": "maksymkmets/finplat-ui",
      "hostname": "finplat-ui",
      "essential": false,
      "memory": 256,
      "dependsOn": [
        {
          "containerName": "finplat-api",
          "condition": "START"
        }
      ]
    },
    {
      "name": "finplat-api",
      "image": "maksymkmets/finplat-api",
      "hostname": "finplat-api",
      "essential": false,
      "memory": 256,
      "dependsOn": [
        {
          "containerName": "postgresql",
          "condition": "START"
        }],
      "links": ["postgresql"]
    },
    {
      "name": "nginx",
      "image": "maksymkmets/nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "finplat-ui",
        "finplat-api"
      ],
      "memory": 256,
      "dependsOn": [
        {
          "containerName": "finplat-ui",
          "condition": "START"
        }
      ]
    }
  ]
}